<?xml version="1.0" encoding="UTF-8"?>
<!--https://github.com/liquibase/liquibase/tree/master/liquibase-core/src/main/java/liquibase/datatype/core -->
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    
    <changeSet id="1" author="Nixon">
        <addColumn tableName="pcclient">
            <column name="ksr_id" type="bigint"/>
        </addColumn>
    </changeSet> 
    
    <changeSet id="2" author="Nixon">
        <addColumn tableName="pcpedc">
            <column name="ksr_id" type="bigint"/>
            <column name="ksr_processed_at" type="datetime" />
        </addColumn>
    </changeSet> 
    
    <changeSet id="3" author="Nixon">
        <addColumn tableName="pcpraca">
            <column name="ksr_id" type="bigint"/>
        </addColumn>
    </changeSet>  
    
    <changeSet id="4" author="Nixon">
        <addColumn tableName="pcregiao">
            <column name="ksr_id" type="bigint"/>
        </addColumn>
    </changeSet> 
    
    <changeSet id="5" author="Nixon">
        <addColumn tableName="pcrotaexp">
            <column name="ksr_id" type="bigint"/>
        </addColumn>
    </changeSet>  
    
    <changeSet id="6" author="Nixon">
        <addColumn tableName="pcfilial">
            <column name="ksr_id" type="bigint"/>
        </addColumn>
    </changeSet>

    <changeSet id="7" author="Nixon">
        <addColumn tableName="pcveicul">
            <column name="ksr_id" type="bigint"/>
            <column name="ksr_processed_at" type="datetime" />
        </addColumn>
    </changeSet>
    
    <changeSet id="8" author="Nixon">
        <createTable tableName="ksr_event">
            <column name="id" type="bigint"/>            
            <column name="ksr_id" type="bigint"/>            
            <column name="eventable_id" type="varchar(255)" />
            <column name="eventable_type" type="varchar(80)" />
            <column name="persist_action" type="varchar(80)" />
            <column name="created_at" type="datetime" />
        </createTable>
        <createSequence sequenceName="ksr_event_seq" startValue="1" incrementBy="1" ordered="true" />
    </changeSet>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
                             
</databaseChangeLog>