<?xml version="1.0" encoding="UTF-8"?>
<!--https://github.com/liquibase/liquibase/tree/master/liquibase-core/src/main/java/liquibase/datatype/core -->
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">   
    
    <changeSet id="1" author="Nixon">
        <createTable tableName="ksr_event">
            <column name="id" type="bigint"/>         
            <column name="eventable_id" type="varchar(255)" />
            <column name="eventable_type" type="varchar(255)" />
            <column name="persist_action" type="varchar(255)" />
            <column name="deleted_record_id" type="bigint" />
            <column name="priority" type="integer" />
            <column name="created_at" type="datetime" />                        
        </createTable>
        <createSequence sequenceName="ksr_event_seq" startValue="1" incrementBy="1" ordered="true" />
    </changeSet> 
    
    <changeSet id="2" author="Nixon">
        <createTable tableName="ksr_record">
            <column name="id" type="bigint"/>                        
            <column name="recordable_id" type="varchar(255)" />
            <column name="recordable_type" type="varchar(255)" />
            <column name="remote_id" type="bigint"/>
            <column name="request_id" type="varchar(255)" />
            <column name="etag" type="varchar(255)" />
            <column name="created_at" type="datetime" />
            <column name="updated_at" type="datetime" />
        </createTable>
        <createIndex tableName="ksr_record" indexName="index_ksr_record_uniqueness" unique="true">
            <column name="recordable_id" />
            <column name="recordable_type" />
        </createIndex>        
        <createSequence sequenceName="ksr_record_seq" startValue="1" incrementBy="1" ordered="true" />
    </changeSet>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
                             
</databaseChangeLog>